---
import Card from '../ui/Card.astro';
import Header from '../layouts/Header.astro';
---

<div id="my_projects" class="w-full bg-radient-ellipse-c from-slate-900 to-neutrals-900 min-h-screen before:bg-radient-ellipse-t before:from-slate-900 before:to-75%">

  <div class="container mx-auto px-6 md:px-12 lg:px-24 py-16">
    <Header text="Explore my work"/>
    <div class="h-16"></div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 card-container">
      <Card 
        title="Next.js + Sanity CMS Blog" 
        body="Full Stack Engineering" 
        skills="" 
        href="/nextjs-blog" 
        classList="bg-harmonic-energy"
      />
      <Card 
        title="Luxury Tent and Event Rental Templates" 
        body="Ecommerce Web Design" 
        skills="" 
        href="/tent-rental-templates" 
        classList='bg-dark-night'
      />
      <Card 
        title="Busy Bee Jumpers Custom Design" 
        body="Ecommerce Web Design" 
        skills="" 
        href="/busy-bee-jumpers" 
        classList='bg-atlas'
      />
      <Card 
        title="Bundle Builder and Related Items Features" 
        body="JavaScript Frameworks" 
        skills="" 
        href="/ers-premium-features" 
        classList="bg-witching-hour"
      />
      <Card 
        title="Instagram Feed Plugin" 
        body="Full Stack Engineering" 
        skills="REST API, JavaScript, oAuth, Express, Node, NoSQL, Nginx" 
        href="/instagram-feed-plugin" 
        classList="bg-instagram"
      />
      <Card 
        title="Golf Tee Time Auto Booker" 
        body="Python on the Web" 
        skills="Python, Selenium, Server Deployment, JavaScript" 
        href="/golf-auto-booker" 
        classList="bg-rainbow-blue" 
      />
      <Card 
        title="Explore the Code Behind This Portfolio" 
        body="GitHub Link" 
        skills="" 
        href="https://github.com/NateDogg97/Astro-Portfolio" 
        target="_blank"
        classList="md:col-span-2 bg-radient-ellipse-c from-purple-600 via-purple-800 to-purple-900"
      />
    </div>
  </div>
</div>

<style>
  #my_projects {
    position: relative;
    height: 100%;
    border-image: linear-gradient(to right, transparent 5%, rgb(255,255,255, 0.4), transparent 95%) 1 / 1px;
  }
  #my_projects::before {
    content: '';
    position: absolute;
    pointer-events: none;
    width: 100%;
    height: 50px;
    z-index: 10;
    top: 1px;
  }
</style>