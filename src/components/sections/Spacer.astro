---
interface Props {
    style?: string;
}

const { style } = Astro.props as Props
---

<div class=`spacer ${style ? style : ''} bg-gradient-to-r from-[rgb(0,0,0,0.4)] via-neutrals-900 to-[rgb(0,0,0,0.4)] before:bg-radient-ellipse-b before:from-slate-900 before:to-neutrals-900 after:bg-radient-ellipse-t after:from-slate-900 after:to-neutrals-900`></div>

<style>
  .spacer {
    position: relative;
    height: 50px;
    border-image: linear-gradient(to right, transparent 5%, rgb(255,255,255, 0.4), transparent 95%) 1 / 1px;
    z-index: 11;
    background-clip: content-box;
  }

  .spacer::before,
  .spacer::after {
    content: '';
    position: absolute;
    pointer-events: none;
    width: 100%;
    height: 50px;
    z-index: 10;
  }

  .spacer::before {
    top: -50px;
  }

  .spacer::after {
    bottom: -50px;
  }
</style>