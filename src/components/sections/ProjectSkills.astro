---
interface Props {
    skills: string[];
}

const { skills } = Astro.props as Props
---

<div class="text-light">
    <h2 class="text-3xl md:text-4xl font-bold mb-8">
        Tools Used
    </h2>
    <div class="flex flex-wrap gap-6">
        {skills.map((skill) => (
            <span class="inline-block bg-gray-800 px-6 py-3 rounded flex-1 whitespace-nowrap text-center max-w-64">{skill}</span>
        ))}

    </div>
</div>